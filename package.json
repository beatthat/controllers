{
  "name": "controllers",
  "scope": "ape",
  "version": "0.0.4",
  "description": "a non-dogmatic triad framework for unity",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beatthat/controllers.git"
  },
  "files": [
    "index.js",
    "scripts",
    "src"
  ],
  "author": "larrykirschner@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beatthat/controllers/issues"
  },
  "homepage": "https://github.com/beatthat/controllers",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "install:test": "rm -f *.tgz && npm pack && cd test && npm run clean && npm install",
    "clean": "rm -f *.tgz && cd test && npm run clean",
    "sync:test2src": "rsync -rv --include '*/' --include '*.cs' --exclude '*' --prune-empty-dirs test/Assets/Plugins/${npm_package_scope}/${npm_package_name}/ ./src/${npm_package_name}/",
    "pub:tag": "git add -A && git commit -m ${npm_package_version} && git tag -a ${npm_package_version} -m ${npm_package_version} && git push origin master && git push origin ${npm_package_version}"
  },
  "dependencies": {
    "ncp": "^2.0.0",
    "mkdirp": "^0.5.1",
    "bindings": "beatthat/bindings#semver:^0.0.4",
    "binding-behaviours": "beatthat/binding-behaviours#semver:^0.0.12",
    "commands-core": "beatthat/commands-core#semver:^0.0.6",
    "controller-interfaces": "beatthat/controller-interfaces#semver:^0.0.2",
    "gameobject-utils": "beatthat/gameobject-utils#semver:^0.0.1",
    "notifications": "beatthat/notifications#semver:^0.0.10",
    "placements": "beatthat/placements#semver:^0.0.3",
    "pools": "beatthat/pools#semver:^0.0.7",
    "services": "beatthat/services#semver:^0.0.5",
    "type-utils": "beatthat/type-utils#semver:^0.0.5"
  }
}
