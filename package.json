{
  "name": "controllers",
  "scope": "beatthat",
  "version": "1.0.1",
  "description": "a non-dogmatic MVC'ish framework for unity",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beatthat/controllers.git"
  },
  "files": [
    "index.js",
    "scripts",
    "src",
    "Runtime",
    "Samples"
  ],
  "author": "larrykirschner@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/beatthat/controllers/issues"
  },
  "homepage": "https://github.com/beatthat/controllers",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "install:test": "npm pack && cp ${npm_package_name}-${npm_package_version}.tgz ${npm_package_name}-latest.tgz && cd test && npm run clean && npm install",
    "clean": "rm -f *.tgz package-lock.json && cd test && npm run clean",
    "cp:test2src": "cd test && node scripts/cp-test2src.js",
    "overwrite:test2src": "cd test && node scripts/overwrite-test2src.js",
    "pub:tag": "git add -A && git commit -m ${npm_package_version} && git tag -a ${npm_package_version} -m ${npm_package_version} && git push origin master && git push origin ${npm_package_version}",
    "preinstall:test": "rm -f *.tgz",
    "template:update": "node scripts/template-update.js",
    "version": "git add -A",
    "postversion": "git push && git push --tags && npm run clean"
  },
  "dependencies": {
    "binding-behaviours": "beatthat/binding-behaviours#semver:^1.0.0",
    "bindings": "beatthat/bindings#semver:^1.0.0",
    "commands-core": "beatthat/commands-core#semver:^1.0.0",
    "controller-interfaces": "beatthat/controller-interfaces#semver:^1.0.0",
    "gameobject-utils": "beatthat/gameobject-utils#semver:^1.0.0",
    "notifications": "beatthat/notifications#semver:^1.0.0",
    "optional-components": "github:beatthat/optional-components#semver:^1.0.0",
    "path": "^0.12.7",
    "placements": "beatthat/placements#semver:^1.0.0",
    "pools": "beatthat/pools#semver:^1.0.0",
    "services": "beatthat/services#semver:^1.0.0",
    "type-utils": "beatthat/type-utils#semver:^1.0.0",
    "unity-npm-utils": "github:beatthat/unity-npm-utils#semver:^1.0.0"
  },
  "devDependencies": {}
}
